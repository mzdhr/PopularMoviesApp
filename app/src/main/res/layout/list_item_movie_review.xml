<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:padding="0dp"
    >

    <TextView
        android:id="@+id/review_author_name_textView"
        style="@style/subHeaderTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plot"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/review_user_content_textView"
        style="@style/subHeaderTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_author_name_textView"
        android:text="@string/demo_plot"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/review_user_content_textView"
        android:background="@drawable/boarder_background"
        />
</RelativeLayout>